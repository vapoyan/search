<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="app.coinfo.feature.search.presentation.home.HomeViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.home.HomeFragment">

        <include
            android:id="@+id/include_search_fragment_home_content"
            layout="@layout/search_fragment_home_content"
            app:contentViewModel="@{viewModel}" />

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/colorBackground"
            android:minHeight="?attr/actionBarSize"
            android:layout_gravity="bottom"
            app:hideOnScroll="true"
            app:navigationIcon="@drawable/search_ic_close"
            app:menu="@menu/search"
            app:title="@string/search_label_search"
            app:titleCentered="false"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>